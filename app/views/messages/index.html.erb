<% if current_user %>
  <%= link_to 'New Message', new_message_path, id: 'new-message-link', remote: true %>
  <div id='new-message-form'></div>
<% end %>

<h3>Inbound Messages:</h3>
<ul id='inbound-message-listing'>
  <% @inbound_messages.each do |inbound_message| %>
    <li>
      Body: <%= inbound_message.body %><br>
      To: <%= inbound_message.to %><br>
      From: <%= inbound_message.from %><br>
    </li>
  <% end %>
</ul>
